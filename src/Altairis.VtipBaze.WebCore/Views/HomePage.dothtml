@viewModel Altairis.VtipBaze.WebCore.ViewModels.HomePageViewModel, Altairis.VtipBaze.WebCore
@masterPage Views/Site.dotmaster

<dot:Content ContentPlaceHolderID="MainContent">

    <article IncludeInPage="{resource: ShowHeader}">
        <header>
            Welcome at VtipBáze.cz
        </header>
        <p>VtipBáze is a database of jokes. These jokes were kindly generated by ChatGPT or submitted by the community.</p>
        <p>If you can't find your favorite one here, <webforms:HybridRouteLink RouteName="NewJoke">add it</webforms:HybridRouteLink>.</p>
    </article>

    <dot:Repeater DataSource="{value: Jokes}">
        <EmptyDataTemplate>
            <article>
                <header>Error</header>
                <p>
                    No jokes found in this category.
                </p>
            </article>
        </EmptyDataTemplate>

        <ItemTemplate>
            <article id="{value: "j" + Id}">
                <header>
                    <webforms:HybridRouteLink RouteName="SingleJoke" 
                                              Param-JokeId="{value: Id}"
                                              Text="{value: Id}"
                                              class="id" />
                    {{value: DateCreated.ToString("g")}}
                </header>
                <div class="ui-widget-content ui-state-highlight ui-corner-all" 
                     style="padding: .5ex 1ex; margin-bottom: 1ex;" 
                     Visible="{value: !Approved}">
                    <dot:LinkButton Text="[approve]" title="Approve joke"
                        class="ui-icon ui-icon-check" 
                        Click="{command: _root.ApproveJoke(Id)}"
                        Validation.Enabled="false"/>
                    <dot:LinkButton Text="[reject]" title="Reject joke" 
                        class="ui-icon ui-icon-closethick" 
                        Click="{command: _root.RejectJoke(Id)}"
                        Validation.Enabled="false"
                        data-confirmprompt="Do you really want to delete this joke?" />
                    This joke was not approved yet.
                </div>
                {{value: Text}}
                <aside>
                    <dot:AuthenticatedView>
                        <AuthenticatedTemplate>
                            <form style="float: right">
                                <dot:TextBox style-width="120px" class="textbox" 
                                             Text="{value: AdminNewTag}" list="TagList"/>
                                <dot:LinkButton Text="[add]"
                                                title="Add tag"
                                                Click="{command: _root.AddTag(Id, AdminNewTag)}"
                                                class="ui-icon ui-icon-circle-plus" />
                                <dot:LinkButton Text="[clear all]"
                                                title="Clear all tags"
                                                Click="{command: _root.ClearTags(Id)}"
                                                class="ui-icon ui-icon-circle-close"
                                                data-confirmprompt="Do you really want to clear all tags from this joke?" />
                            </form>
                        </AuthenticatedTemplate>
                    </dot:AuthenticatedView>

                    <dot:Repeater DataSource="{value: Tags}" WrapperTagName="ul" class="taglist">
                        <li>
                            <span class="ui-icon ui-icon-tag"></span>
                            <webforms:HybridRouteLink RouteName="TagSearch" 
                                                      Param-TagName="{value: TagName}" Param-PageIndex="1" 
                                                      Text="{value: TagName}"/>
                        </li>
                    </dot:Repeater>
                </aside>
            </article>
        </ItemTemplate>
    </dot:Repeater>

    <div IncludeInPage="{resource: ShowPager}" class="paging">
        <div style="float: left">
            <webforms:HybridRouteLink RouteName="{resource: Context.Route.RouteName}"
                                      Param-PageIndex="1"
                                      Text="&lt;&lt; first"
                                      disabled="{value: Jokes.PagingOptions.IsFirstPage}"/>
            <webforms:HybridRouteLink RouteName="{resource: Context.Route.RouteName}"
                                      Param-PageIndex="{value: CurrentPageIndex - 1}"
                                      Text="&lt; previous" 
                                      disabled="{value: Jokes.PagingOptions.IsFirstPage}"/>
        </div>
        <webforms:HybridRouteLink RouteName="{resource: Context.Route.RouteName}"
                                  Param-PageIndex="{value: CurrentPageIndex + 1}"
                                  Text="next &gt;" 
                                  disabled="{value: Jokes.PagingOptions.IsLastPage}"/>
        <webforms:HybridRouteLink RouteName="{resource: Context.Route.RouteName}"
                                  Param-PageIndex="{value: Jokes.PagingOptions.PagesCount}"
                                  Text="last &gt;&gt;" 
                                  disabled="{value: Jokes.PagingOptions.IsLastPage}"/>
    </div>

    <dot:Repeater ID="TagList" WrapperTagName="datalist" DataSource="{value: TagNames}">
        <option value="{value: _this}"></option>
    </dot:Repeater>

</dot:Content>

